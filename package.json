{
  "build": {
    "appId": "org.animedownloader.app",
    "productName": "Anime Downloader",
    "directories": {
      "buildResources": "resources",
      "output": "releases"
    },
    "win": {
      "target": "nsis",
      "icon": "src/assets/images/icon.ico",
      "publisherName": "eemj",
      "publish": [
        {
          "provider": "github",
          "repo": "anime-downloader",
          "owner": "wnzvr",
          "vPrefixedTagName": true
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "installerIcon": "src/assets/images/icon.ico",
      "uninstallerIcon": "src/assets/images/icon.ico",
      "shortcutName": "Anime Downloader",
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "linux": {
      "category": "Utility",
      "target": [
        {
          "target": "pacman"
        },
        {
          "target": "tar.gz"
        },
        {
          "target": "deb"
        }
      ]
    },
    "squirrelWindows": {
      "iconUrl": "https://gitlab.com/eemj/anime-downloader-assets/raw/master/icon.png",
      "loadingGif": "src/assets/images/loading.gif",
      "remoteReleases": false
    },
    "compression": "maximum",
    "files": [
      "node_modules/",
      "config/defaults.js",
      "src/assets/images/**",
      "dist/",
      "lib/**",
      "index.js"
    ]
  },
  "dependencies": {
    "@uirouter/angularjs": "^1.0.6",
    "angular": "^1.6.5",
    "angular-animate": "^1.6.6",
    "angular-aria": "^1.6.6",
    "angular-material": "^1.1.5",
    "angular-messages": "^1.6.6",
    "anime-scrape": "github:eemj/anime-scrape",
    "bunyan": "^1.8.12",
    "chalk": "^2.3.2",
    "cheerio": "^1.0.0-rc.2",
    "dotenv-extended": "^2.0.1",
    "electron-is-dev": "^0.3.0",
    "electron-updater": "^2.21.4",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^2.30.1",
    "moment": "^2.21.0",
    "progress-bar-webpack-plugin": "^1.11.0",
    "request": "^2.83.0",
    "request-progress": "^3.0.0",
    "rimraf": "^2.6.2"
  },
  "liscense": "MIT",
  "private": true,
  "author": {
    "name": "eemj",
    "email": "jamiefre4ky@gmail.com",
    "url": "http://github.com/eemj"
  },
  "description": "An app that manages your anime.",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-stage-2": "^6.24.1",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.5",
    "electron": "^1.8.4",
    "electron-builder": "^19.49.2",
    "eslint": "^4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-angular": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "file-loader": "^0.11.2",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.0.6",
    "raw-loader": "^0.5.1",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^1.0.1",
    "webpack": "^3.5.5",
    "webpack-dev-server": "^2.7.1"
  },
  "license": "ISC",
  "main": "index.js",
  "name": "anime-downloader",
  "homepage": "https://gitlab.com/eemj/anime-downloader-assets",
  "scripts": {
    "build": "cross-env DISABLE_ELECTRON=1 npm run webpack",
    "checksums": "node scripts/checksums",
    "clean": "rimraf dist",
    "lint": "eslint . --color",
    "postinstall": "npm run build",
    "preview": "electron .",
    "release": "electron-builder",
    "release:linux": "electron-builder -l",
    "release:win": "electron-builder -w",
    "start": "npm run clean && npm run webpack",
    "webpack:server": "webpack-dev-server --config config/webpack.config.js",
    "webpack": "webpack --config config/webpack.config.js"
  },
  "version": "1.0.3"
}
